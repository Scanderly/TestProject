@using TestProject.Models
@model List<Menu>
@{
    ViewBag.Title = "Menus";
   
}

<div class="menuform">
    <h2>Menyular</h2>
    <table>
        <thead>
            <tr>
                <td>Name</td>
                <td>Link</td>
            </tr>
        </thead>
        <tbody>

            @foreach (Menu menu in Model)
            {
                <tr>
                    <td>
                       @menu.Name
                    </td>
                    <td>
                        @menu.Link
                    </td>
                    <td>
                        <a href="@Url.Action("update","edit",new{id=menu.Id})">Update</a>
                    </td>
                    <td>
                        <a onclick="return confirm('Are you sure?')" href="@Url.Action("delete","edit",new{id=menu.Id})">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a href="@Url.Action("create","edit")">
            Add New Menu
        </a>
    </div>
</div>

